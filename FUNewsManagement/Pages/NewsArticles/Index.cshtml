@page
@model FUNewsManagement.Pages.NewsArticles.IndexModel

@{ ViewData["Title"] = "News Articles"; }

<h1>News Articles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsArticles[0].NewsTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsArticles[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsArticles[0].NewsStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewsArticles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsStatus)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.NewsArticleId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.NewsArticleId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.NewsArticleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

