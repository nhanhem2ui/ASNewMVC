@page
@model FUNewsManagement.Pages.NewsArticles.IndexModel

@{
    ViewData["Title"] = "News Articles";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>News Articles</h1>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </div>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search by title..." value="@Model.CurrentFilter">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort">
                        @Html.DisplayNameFor(model => model.NewsArticles[0].NewsTitle)
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                        @Html.DisplayNameFor(model => model.NewsArticles[0].CreatedDate)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewsArticles[0].NewsStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NewsArticles)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @if (item.NewsStatus == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a asp-page="./Index" asp-route-pageIndex="@i" asp-route-currentFilter="@Model.CurrentFilter" asp-route-sortOrder="@Model.CurrentSort" class="page-link">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
