@page
@model FUNewsManagement.Pages.SystemAccounts.IndexModel

@{
    ViewData["Title"] = "System Accounts";
}

<div class="container-fluid">
    <h1 class="my-4">System Accounts</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-page="Create" class="btn btn-primary">Create New</a>
        <form class="d-flex" method="get">
            <input class="form-control me-2" type="text" name="searchString" value="@Model.CurrentFilter" placeholder="Filter by name or email" />
            <button type="submit" class="btn btn-outline-success">Search</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountRole)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.SystemAccounts) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountRole)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
