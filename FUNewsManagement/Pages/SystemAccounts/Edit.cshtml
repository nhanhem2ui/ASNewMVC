@page "{id:int}"
@model FUNewsManagement.Pages.SystemAccounts.EditModel

@{
    ViewData["Title"] = "Edit System Account";
}

<div class="container-fluid">
    <h1>Edit System Account</h1>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="SystemAccount.AccountId" />

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountName" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountName" class="form-control" />
                    <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountEmail" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountEmail" class="form-control" />
                    <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountPassword" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountPassword" class="form-control" type="password" />
                    <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountRole" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountRole" class="form-control" />
                    <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
