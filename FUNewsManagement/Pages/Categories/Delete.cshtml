@page "{id:int}"
@model FUNewsManagement.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid">
    <h1>Delete Category</h1>
    <hr />

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this?</h4>
        <p>This action cannot be undone. This will permanently delete the category.</p>
    </div>

    <div>
        <dl class="row">
            <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.Category.CategoryName)</dt>
            <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
        </dl>

        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Category.CategoryId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
