<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU News</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FUNewsManagement.styles.css" asp-append-version="true" />

    <style>
        /* Base dropdown styles */
        .navbar-nav .dropdown-menu {
            border-radius: 0.375rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .dropdown-item {
            padding: 0.5rem 1.5rem;
            position: relative;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .navbar-brand {
            font-weight: 600;
        }

        /* Multi-level dropdown styles */
        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu > .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }

            .dropdown-submenu > .dropdown-item::after {
                content: "›";
                position: absolute;
                right: 1rem;
                font-size: 1.2rem;
                font-weight: bold;
                transition: transform 0.2s;
            }

            .dropdown-submenu:hover > .dropdown-menu {
                display: block;
            }

            .dropdown-submenu > .dropdown-item:hover::after {
                transform: translateX(3px);
            }

        /* Mobile responsiveness */
        @@media (max-width: 767px) {
            .dropdown-submenu > .dropdown-menu
        {
            position: static;
            margin-left: 1rem;
            box-shadow: none;
            border-left: 2px solid #dee2e6;
        }

        .dropdown-submenu > .dropdown-item::after {
            content: "▼";
            font-size: 0.8rem;
        }

        }

        /* Hover effect for nested items */
        .dropdown-menu .dropdown-menu .dropdown-item {
            padding-left: 2rem;
            font-size: 0.9rem;
        }

        .btn-signout {
            border: none;
            background: none;
            color: #000;
            padding: 0;
            cursor: pointer;
        }

            .btn-signout:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Home/Index">FU News</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Auth/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Auth/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <!-- News Articles Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="newsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    News Articles
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="newsDropdown">
                                    <li><a class="dropdown-item" asp-page="/NewsArticles/Index">Manage Articles</a></li>

                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item" href="javascript:void(0);">Browse & View</a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-page="/NewsArticles/Browse">Browse All</a></li>
                                            <li><a class="dropdown-item" asp-page="/NewsArticles/Browse" asp-route-sortBy="newest">Latest Articles</a></li>
                                            <li><a class="dropdown-item" asp-page="/NewsArticles/Browse" asp-route-sortBy="title">By Title</a></li>
                                        </ul>
                                    </li>

                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item" href="javascript:void(0);">By Category</a>
                                        <ul class="dropdown-menu">
                                            @if (ViewBag.Categories != null)
                                            {
                                                @foreach (var cat in ViewBag.Categories)
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-page="/NewsArticles/Browse"
                                                           asp-route-categoryId="@cat.CategoryId">@cat.CategoryName</a>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li><a class="dropdown-item" asp-page="/NewsArticles/Browse">All Categories</a></li>
                                            }
                                        </ul>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Lecturer"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/NewsArticles/Create">Create New Article</a></li>
                                    }

                                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item" href="javascript:void(0);">Reports & Analytics</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-page="/NewsArticles/Report">Full Report</a></li>
                                                <li><a class="dropdown-item" asp-page="/NewsArticles/Report" asp-route-sortOrder="asc">By Date (Asc)</a></li>
                                                <li><a class="dropdown-item" asp-page="/NewsArticles/Report" asp-route-sortOrder="desc">By Date (Desc)</a></li>
                                            </ul>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- System Accounts -->
                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="accountsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        System Accounts
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="accountsDropdown">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li><a class="dropdown-item" asp-page="/SystemAccounts/Index">All Accounts</a></li>
                                            <li><a class="dropdown-item" asp-page="/SystemAccounts/Create">Create Account</a></li>
                                            <li><hr class="dropdown-divider" /></li>
                                        }

                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item" href="javascript:void(0);">Search Accounts</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-page="/SystemAccounts/Index">View All</a></li>
                                                <li><a class="dropdown-item" asp-page="/SystemAccounts/Index" asp-route-filter="admin">Search Admins</a></li>
                                                <li><a class="dropdown-item" asp-page="/SystemAccounts/Index" asp-route-filter="staff">Search Staff</a></li>
                                                <li><a class="dropdown-item" asp-page="/SystemAccounts/Index" asp-route-filter="lecturer">Search Lecturers</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- Categories -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categories
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                    <li><a class="dropdown-item" asp-page="/Categories/Index">All Categories</a></li>
                                    <li><a class="dropdown-item" asp-page="/Categories/Create">Create Category</a></li>
                                </ul>
                            </li>

                            <!-- Tags -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="tagsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Tags
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="tagsDropdown">
                                    <li><a class="dropdown-item" asp-page="/Tags/Index">All Tags</a></li>

                                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/Tags/Create">Create Tag</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                </ul>
                            </li>

                            <li class.nav-item">
                                <a class="nav-link" asp-page="/Chat/Chat">Message</a>
                            </li>

                            <li class.nav-item">
                                <form asp-page="/Auth/Logout" method="post" class="nav-link">
                                    <button type="submit" class="btn-signout">Sign out</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.innerWidth < 768) {
                const submenuItems = document.querySelectorAll('.dropdown-submenu > .dropdown-item');
                submenuItems.forEach(item => {
                    item.addEventListener('click', function (e) {
                        e.preventDefault();
                        e.stopPropagation();
                        const submenu = this.nextElementSibling;
                        if (submenu && submenu.classList.contains('dropdown-menu')) {
                            submenu.style.display = submenu.style.display === 'block' ? 'none' : 'block';
                        }
                    });
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
