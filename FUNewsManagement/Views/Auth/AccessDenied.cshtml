@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="access-denied-wrapper">
        <div class="icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
            </svg>
        </div>

        <h1>Access Denied</h1>
        <p class="error-code">Error 403</p>
        <p class="message">
            You don't have permission to access this resource.
            If you believe this is a mistake, please contact your administrator.
        </p>

        <div class="action-buttons">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home</a>
            <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #eaeaea 0%, #000000 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        margin: 0;
        padding: 20px;
    }

    .container {
        width: 100%;
        max-width: 600px;
    }

    .access-denied-wrapper {
        background: white;
        border-radius: 16px;
        padding: 60px 40px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .icon-container {
        margin: 0 auto 30px;
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #8d8d8d 0%, #dff3ff 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .icon-container svg {
            width: 60px;
            height: 60px;
            color: white;
        }

    h1 {
        font-size: 2.5rem;
        color: #2d3748;
        margin: 0 0 10px;
        font-weight: 700;
    }

    .error-code {
        font-size: 1.25rem;
        color: #718096;
        margin: 0 0 20px;
        font-weight: 600;
    }

    .message {
        font-size: 1.1rem;
        color: #4a5568;
        line-height: 1.6;
        margin: 0 0 40px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 32px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-primary {
        background: linear-gradient(21deg, #364cb5 0%, #9374b2 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

    .btn-secondary {
        background: #e2e8f0;
        color: #2d3748;
    }

        .btn-secondary:hover {
            background: #cbd5e0;
            transform: translateY(-2px);
        }

    @@media (max-width: 600px) {
        .access-denied-wrapper

    {
        padding: 40px 30px;
    }

    h1 {
        font-size: 2rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    }
</style>